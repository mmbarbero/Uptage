<body>

    <nav id="navbar-main" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-nav-demo" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">Uptage</a>


                <% include login %>

            </div>
            <div class="collapse navbar-collapse" id="bs-nav-demo">

                <ul class="nav navbar-nav">
                    <li>
                        <a href="/map">Map</a>
                    </li>
                    <li>
                        <a href="/videos">Videos</a>
                    </li>
                </ul>

                <div id="searchbar" class=" col-sm-4 topSearch">
                    <form action="/search" method="GET" class="navbar-form" role="search">
                        <div class="input-group">
                            <input name="searchTerm" type="text" class="form-control" placeholder="Search" name="q">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <ul class="nav navbar-nav navbar-right">

    
     <% if(!currentUser){ %>
            
                <li>
                    <a id="modal_trigger" href="#modal">Sign In</a>
                </li>
                <%   }else{ %>   
                    <li>
                        <a href="/dashboard/<%= currentUser.username%>/account_info">Dashboard |
                            <%=currentUser.username %>
                        </a>
                    </li>
            
                    <% if(currentUser.type === "seller"){ %>
            
                        <li>
                            <a href="/upload">Upload
                                <i class="icon fas fa-upload"></i>
                            </a>
                        </li>
                        <% }else if(currentUser.type === "buyer"){ %>
                            <li>
                                <a href="/dashboard/<%= currentUser.username%>/my_videos">Downloads
                                    <i class="icon fas fa-download"></i>
                                </a>
                            </li>
                      
                                <% }else if(currentUser.type === "admin"){ %>
                                    <li>
                                        <a href="/adminDashboard">Admin Dashboard </a>
                                    </li>
                                    <% } %>
                                        <li>
                                            <a href="/logout">Log Out</a>
                                        </li>
            
                                        <% } %>


                </ul>
            </div>
        </div>
    </nav>