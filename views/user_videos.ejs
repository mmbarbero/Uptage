<% include partials/navbar %>
    <div id="page-wrap">

        <div id="mySidenav" class="sidenav">
            <a href="/dashboard/<%= currentUser.username%>/account_info">Account Info</a>
            <a href="/dashboard/<%= currentUser.username%>/statistics">Statistics</a>
            <a href="/dashboard/<%= currentUser.username%>/transactions">Transactions</a>
            <a href="/dashboard/<%= currentUser.username%>/my_videos" class="active-page">My videos</a>
        </div>

        <section id="main-content">

            <div id="dashboardContainer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-4 col-sm-6">
                            <h1 class="title">Owned videos</h1>
                        </div>
                    </div>
                    <div class="row">
                        <%  for (var i = 0; i < videos.length; i++){ %>

                            <div id="column" class="col-lg-4 col-sm-6">
                                <div id="tile">
                                    <label>
                                        <a id="vidLink" href="/videos/<%=videos[i]._id%>">
                                            <video width="100%" height="80%">
                                                <source src="<%=videos[i].path%>" type="video/mp4">

                                            </video>

                                            <h4>
                                                <%=videos[i].title %>

                                            </h4>
                                            <p> by
                                                <%=videos[i].author %>
                                            </p>
                                            </a>
                                    </label>
                                </div>
                            </div>

                            <%    } %>
                    </div>

                </div>
            </div>
        </section>
    </div>

    <% include partials/footer %>