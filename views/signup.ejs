<div class="alert alert-danger alert-dismissible">
	<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	<p>
		<%= error %>
	</p>
</div>
<% } %>


<div id="signup" class="container-fluid">
    <section class="container">
		<div class="container-page">	
            <div class="row">
			<div class="col-lg-6 vcenter verticalLine">
                <h2 id="signupTitle" class="dark-grey">Create an Account</h2>
                <form action="/signup" method="post">
                <div class="form-group col-lg-6">
					<label>First Name</label>
					<input type="text" name="firstName" class="form-control" id="" value="">
				</div>
				
				<div class="form-group col-lg-6">
					<label>Last Name</label>
					<input type="text" name="lastName" class="form-control" id="" value="">
				</div>
                
                
				<div class="form-group col-lg-12">
					<label>Username</label>
					<input type="" name="username" class="form-control" id="" value="">
				</div>
								
				<div class="form-group col-lg-12">
					<label>Email Address</label>
					<input type="" name="email" class="form-control" id="" value="">
				</div>
				
		<div class="form-group col-lg-6">
					<label>Password</label>
					<input type="password" name="password" class="form-control" id="" value="">
				</div>
				
				<div class="form-group col-lg-6">
					<label>Repeat Password</label>
					<input type="password" name="confPassword" class="form-control" id="" value="">
				</div>
                
                  <div class="col-sm-6">
                
                <button type="submit" class="btn btn-default">Submit</button>
                </div>
                
				<div class="col-sm-6">
					<input type="checkbox" class="checkbox" name="acceptTandC" />I agree with the terms and conditions
				</div>
              </form>
			</div><!--
               --><div class="col-lg-6 vcenter">
				<h2 id="loginTitle" class="dark-grey">Log In</h2>
				<form action="/login" method="post">
					
					<div class="form-group col-lg-12 loginform">
						<label>Username</label>
						<input type="" name="username" class="form-control" id="" value="">
					</div>
					<br>
					<div class="form-group col-lg-12 loginform">
						<label>Password</label>
						<input type="password" name="password" class="form-control" id="" value="">
					</div>
					<div class="col-lg-12 loginform">
					<button type="submit" class="btn btn-default">Submit</button>
					</div>
				</form>
                
			</div>
		</div>
			
		</div>
	</section>
</div>



