<% include partials/navbar_others %>
<div id="signup" class="container-fluid">
    <section class="container">
		<div class="container-page">	
            <div class="row">
			<div class="col-md-6 vcenter verticalLine">
                <h2 id="signupTitle" class="dark-grey">Create an Account</h2>
                <form action="/signup" method="post">
                <div class="form-group col-lg-6">
					<label>First Name</label>
					<input type="text" name="firstName" class="form-control" id="" value="">
				</div>
				
				<div class="form-group col-lg-6">
					<label>Last Name</label>
					<input type="text" name="lastName" class="form-control" id="" value="">
				</div>
                
                
				<div class="form-group col-lg-12">
					<label>Username</label>
					<input type="" name="username" class="form-control" id="" value="">
				</div>
								
				<div class="form-group col-lg-12">
					<label>Email Address</label>
					<input type="" name="email" class="form-control" id="" value="">
				</div>
				
		<div class="form-group col-lg-6">
					<label>Password</label>
					<input type="password" name="passwd" class="form-control" id="" value="">
				</div>
				
				<div class="form-group col-lg-6">
					<label>Repeat Password</label>
					<input type="password" name="confPasswd" class="form-control" id="" value="">
				</div>
                
                  <div class="col-sm-6">
                
                <button type="submit" class="btn btn-default">Submit</button>
                </div>
                
				<div class="col-sm-6">
					<input type="checkbox" class="checkbox" name="acceptTandC" />I agree with the terms and conditions
				</div>
              </form>
			</div><!--
               --><div class="col-md-6 vcenter signuptext">
				<span>
                Sign up to access thousands of<br> videos, or upload your own!
                
                </span>
                
			</div>
		</div>
			
		</div>
	</section>
</div>



